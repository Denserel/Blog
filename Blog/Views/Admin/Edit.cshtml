@model PostViewModel


<div class="container">
    <form asp-controller="Admin" asp-action="Edit" method="post" enctype="multipart/form-data">
        <input asp-for="Id" type="hidden" />
        <div>
            <label>Titel</label>
            <input asp-for="Title"/>
        </div>
        <div>
            <label>Description</label>
            <textarea asp-for="Description"></textarea>
        </div>
        <div>
            <label>Tags</label>
            <input asp-for="Tags"/>
        </div>
        <div>
            <label>Category</label>
            <input asp-for="Category"/>
        </div>
        <div>
            <label>Body</label>
            <textarea id="editor" asp-for="Body"></textarea>
        </div>
        <div>
            <label>Image</label>
            <input asp-for="CurrentImage" type="hidden" />
            <input asp-for="Image"/>
        </div>
        <input type="submit" value="Submit" />
    </form>
</div>

