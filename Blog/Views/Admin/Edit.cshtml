<link rel="stylesheet" href="~/lib/Trumbowyg-main/dist/ui/trumbowyg.min.css" />
<div class="container">
    <form asp-controller="Admin" asp-action="Edit" method="post" enctype="multipart/form-data">
        <input asp-for="Id" type="hidden" />
        <div>
            <label>Titel</label>
            <input asp-for="Title"/>
        </div>
        <div>
            <label>Body</label>
            <textarea id="editor" asp-for="Body"></textarea>
        </div>
        <div>
            <label>Image</label>
            <input asp-for="CurrentImage" type="hidden" />
            <input asp-for="Image"/>
        </div>
        <input type="submit" value="submit" />
    </form>
</div>

