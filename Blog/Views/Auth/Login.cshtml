@model AuthUserViewModel


<div class="container">
    <form asp-controller="Auth" asp-action="Login" asp-antiforgery="true" method="post">
        <div>
            <label>User</label>
            <input asp-for="UserName" />
        </div>
        <div>
            <label>Password</label>
            <input asp-for="Password" />
        </div>
        <input type="submit" value="Login" />
    </form>
</div>