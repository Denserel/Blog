@model CommentViewModel

<form class="comment-editor" asp-controller="home" asp-action="comment" method="post">
    <input asp-for="PostId" type="hidden" />
    <input asp-for="MainCommentId" type="hidden" />
    <input asp-for="User" type="hidden" />
    <textarea asp-for="Message" id="editor" ></textarea>
    <span asp-validation-for="Message"></span>
    <input type="submit" value="Submit" />
</form>