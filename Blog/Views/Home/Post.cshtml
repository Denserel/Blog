@model Post

<article class="container">
    <div>
        @if (!String.IsNullOrEmpty(Model.Image))
        {
            var path = $"/image/{Model.Image}";
            <figure>
                <img src="@path">
                <figcaption>@Model.Title</figcaption>
            </figure>
        }
    </div>
    <div>
        @Html.Raw(Model.Body)
    </div>
</article>
